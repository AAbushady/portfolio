---
import type { CollectionEntry } from 'astro:content';
import Pill from './Pill.astro';

interface Props {
	post: CollectionEntry<'blog'>;
}

const { data, id } = Astro.props.post;
---

<article class="card">
	<div class="content">
		<h3><a href={`/blog/${id}/`}>{data.title}</a></h3>
		<div class="tags">
			{data.tags.map((tag) => (
				<Pill>{tag}</Pill>
			))}
		</div>
		<p class="description">{data.description}</p>
		<div class="meta">
			<time>Published: {data.publishDate.toLocaleDateString()}</time>
			{data.updatedDate && (
				<time>Updated: {data.updatedDate.toLocaleDateString()}</time>
			)}
		</div>
	</div>
	{data.img && (
		<img src={data.img} alt={data.img_alt || `Preview of ${data.title}`} loading="lazy" decoding="async" />
	)}
</article>

<style>
	.card {
		display: flex;
		flex-direction: column;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		overflow: hidden;
		box-shadow: var(--shadow-sm);
		transition: box-shadow var(--theme-transition);
		height: 100%;
	}

	.card:hover {
		box-shadow: var(--shadow-md);
	}

	.content {
		padding: 1.5rem;
		flex-grow: 1;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	h3 {
		margin: 0;
		font-size: var(--text-lg);
		font-family: var(--font-brand);
		font-weight: 500;
	}

	h3 a {
		color: var(--gray-0);
		text-decoration: none;
		transition: color var(--theme-transition);
	}

	h3 a:hover {
		color: var(--accent-regular);
	}

	.description {
		margin: 0;
		color: var(--gray-300);
		font-size: var(--text-sm);
		line-height: 1.4;
		flex-grow: 1;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.meta {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 0.5rem;
		font-size: var(--text-sm);
		color: var(--gray-400);
	}


	.tags {
		display: flex;
		gap: 0.375rem;
		flex-wrap: wrap;
	}

	.tags :global(.pill) {
		font-size: var(--text-xs);
		padding: 0.25rem 0.75rem;
	}

	img {
		width: 100%;
		height: 12rem;
		object-fit: cover;
	}

	@media (min-width: 50em) {
		.card {
			border-radius: 1.5rem;
		}

		img {
			height: 16rem;
		}
	}
</style>
